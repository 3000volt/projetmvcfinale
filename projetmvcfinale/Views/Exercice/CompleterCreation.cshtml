@model projetmvcfinale.Models.ExerciceVM

<div style="margin: 10px;">
    
    <div class="row">
        <div class="form-group col-sm-12">
            <h5><u>Informations relatif à l'exercice</u></h5>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-sm-6">
            @Html.DisplayNameFor(model => model.NomExercices) : @Html.DisplayFor(model => model.NomExercices)
        </div>

        <div class="form-group col-sm-6">
            @Html.DisplayNameFor(model => model.TypeExercice) : @Html.DisplayFor(model => model.TypeExercice)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-6">
            @Html.DisplayNameFor(model => model.IdDifficulte) : @Html.DisplayFor(model => model.IdDifficulte)
        </div>
        <div class="form-group col-sm-6">
            @Html.DisplayNameFor(model => model.IdCateg) : @Html.DisplayFor(model => model.IdCateg)
        </div>
    </div>
</div>

<hr />

@if (ViewBag.Type == "Interactif")
{
    <div id="divElementCompetence">
        <partial name="_ExerciceInteractif" model="ViewBag.CreerAnalyse" />
    </div>
}

else if (ViewBag.Type == "Normal")
{
    <div id="divElementCompetence">
        <partial name="_UploadExercice" model="ViewBag.CreerAnalyse" />
    </div>
}

@section Scripts {
    <script src="~/js/Exercice3.js"></script>
}