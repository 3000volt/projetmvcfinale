@model projetmvcfinale.Models.ExerciceVM

@{
    ViewData["Title"] = "ModifierExercice";
}

<h2>Modifier un exercice</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModifierExerciceNormal" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdExercice" />
            <div class="form-group">
                <label asp-for="NomExercices" class="control-label"></label>
                <input asp-for="NomExercices" class="form-control" />
                <span asp-validation-for="NomExercices" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeExercice" class="control-label"></label>
                <input asp-for="TypeExercice" class="form-control" readonly/>
                <span asp-validation-for="TypeExercice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDifficulte" class="control-label"></label>
                <select asp-for="IdDifficulte" class="form-control" asp-items="ViewBag.Niveau"></select>
                <span asp-validation-for="IdDifficulte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCateg" class="control-label"></label>
                <select asp-for="IdCateg" class="form-control" asp-items="ViewBag.Categorie"></select>
                <span asp-validation-for="IdCateg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lien" class="control-label"></label>
                <input asp-for="Lien" class="form-control" type="file" />
                <span asp-validation-for="Lien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="ListeExercice" class="btn btn-info">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
