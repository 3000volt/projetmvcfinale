@model projetmvcfinale.Models.Exercice

<div style="margin: 10px;">
    <div class="row">
        <div class="form-group col-sm-12">
            <h5><u>Ajouter un fichier</u></h5>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <form method="post" enctype="multipart/form-data" asp-controller="Exercice" asp-action="UploadExercice">
                <div class="form-group">
                    <label asp-for="Lien" class="control-label"></label>
                    <input asp-for="Lien" class="form-control" type="file" />
                    <span asp-validation-for="Lien" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Téléverser" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="ListeExercice" class="btn btn-primary">Retour à la liste</a>
    </div>
</div>

