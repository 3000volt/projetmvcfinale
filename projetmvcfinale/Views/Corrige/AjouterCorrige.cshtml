@model projetmvcfinale.Models.Corrige

@{
    ViewData["Title"] = "AjouterCorrige";
}

<h1>Ajouter un corrigé</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AjouterCorrige">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idcorrige" class="control-label"></label>
                <input asp-for="Idcorrige" class="form-control" />
                <span asp-validation-for="Idcorrige" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrigeDocNom" class="control-label"></label>
                <input asp-for="CorrigeDocNom" class="form-control" />
                <span asp-validation-for="CorrigeDocNom" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Lien" class="control-label"></label>
                <input asp-for="Lien" type="file" class="form-control" />
                <span asp-validation-for="Lien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateInsertion" class="control-label"></label>
                <input asp-for="DateInsertion" class="form-control" />
                <span asp-validation-for="DateInsertion" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Idexercice" class="control-label"></label>
                <select asp-for="Idexercice" class ="form-control" asp-items="ViewBag.Idexercice"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter le corrigé" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListeCorrige">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
